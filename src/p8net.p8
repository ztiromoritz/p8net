function _s_handle(ctx,msg)
 local c = ctx.clientid
 local cmd = sub(msg,1,3)
 local args = sub(msg,5)
 if(cmd == "pos") then
  s_snd("pos|"..c.."|"..args)
  s_dbg("pos|"..c.."|"..args)
 end
 if(cmd == "who") then
  s_sndto(c,"you|"..c)
 end
end

function _s_join(ctx)
 local c = ctx.clientid
 s_dbg("join "..c)
 s_dbg("join "..s_all()[1])
 if s_all()[1]==c then
  s_sndto(c,"clr|8")
 else
  s_sndto(c,"clr|11")
 end
 
 
end

function _s_init(ctx)
 s_dbg("server init")
end

